<!--pages/index/index.wxml-->
<import src="../../components/toast/toast.wxml" />
<template is="toast" data="{{..._toast_}}" ></template>
<scroll-view scroll-y class="home-view" bindscroll="scroll">
  <view class='container'>
    <text class='point'>{{score}}</text>
    <view class='intro' bindtap="navigator" id="diamond">
      <view class="slopingside"></view>  
      <view class="linear"></view> 
      <text class="diamond">什么是信用钻<text class="iconfont icon-wenti font"></text></text>
    </view>
    <image class='homeImg' src="../../images/home.png"></image>
    <view class='btn-contain'>
      <button class="btn {{isSign?'sign':''}}" bindtap="sign" loading="{{signLoading}}">
         <image class='btnImg' src='../../images/button-bg.png'></image> 
        {{isSign?'已签到':'签到'}}  <text wx:if="{{!isSign}}">+{{signScore}}</text>
      </button>
      <button class='btn' style="background-image: url('../../images/button-bg.png');" bindtap="invite">
         <image class='btnImg' src='../../images/button-bg.png'></image> 
        邀请好友 <text>+{{inviteScore}}</text>
      </button>
    </view>
  </view>
  <view class='ranking'>
    <view class='title'>
      <text class='left'></text><text>排行榜</text><text class='right'></text>
    </view>
    <view class='user-list'>
      <view class='user' wx:for="{{userList}}" wx:for-item="item" wx:key="index">
        <image class="head" src='{{item.headIcon}}'></image>
        <text class='username'>{{item.nickname}}</text>
        <text class='score'>{{item.score/10000}}</text>
      </view>
    </view>
  </view>
  <view class='padding'></view>
  <view class='menu'>
    <view id='diamond' bindtap="opentest"><text class="iconfont icon-jihuo1 font"></text></view>
    <view id='me' bindtap="navigator"><text class="iconfont icon-moren font"></text></view>
  </view>
</scroll-view>
