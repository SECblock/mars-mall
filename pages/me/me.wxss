.user-center {
  position:absolute;
  height:100%;
  background:#eff2f5;
  width:100%;
  font-family: PingFang SC;
}
.header_pic {
  width: 100%;
  height: 352rpx;
}
.userinfo {
  display:flex;
  flex-direction:column;
  align-items:center;
  position:relative;
  top:-170rpx;
  width:90%;
  background:#fff;
  margin:0 5% auto;
  text-align:center;
  border-radius:8rpx;
  background-color:#ffffff;
  box-shadow: 5rpx 5rpx 6rpx 0 rgba(0, 0, 0, 0.08);
  height: 353rpx;

}

.userinfo-avatar {
  width: 160rpx;
  height: 160rpx;
  border-radius:160rpx;
  margin-top:-80rpx;
  background-color:#eff2f5;
  background-color:#65b9e0;
  border:solid 4rpx #ffffff;
  margin-bottom: 10rpx;
  background: #fff;
}

.userinfo-nickname {
  color:#4781c4;
  font-size:30rpx;

}
.content {
  width:100%;
  height:194rpx;
  font-size: 30rpx;
  color: #484848;

}
.part {
  width:50%;
  float:left;
  text-align:center;
}
.invite {
  display: inline-block;
  width: 50%;
}
.assets-card {
  top:-75px;
}
.diamond-card {
  top:-65px;
}
.card {
  position:relative;
  width:90%;
  margin:0 5% 0 5%;
  color:#484848;
  font-size:30rpx;
  background:#fff;
  border-radius:8rpx;
  background-color:#ffffff;
  box-shadow:5rpx 5rpx 6rpx 0 rgba(0, 0, 0, 0.08);
  height:88rpx;
  display: table;
}
.font {
  font-size:56rpx;
  color:#4781c4;
  display:table-cell;
  width:56rpx;
  vertical-align:middle;
  padding-left:32rpx;
  padding-right:20rpx;
}
.text-common {
  font-size:30rpx;
  color:#484848;
  display:table-cell;
  vertical-align:middle;
}
.font-common {
  display:block;
  font-size:80rpx;
  color:#4781c4;
}
.sign {
  font-size:30rpx;
  color:#484848;
}
.signed {
  opacity: 0.5;
  font-size:30rpx;
}
.invite {
  font-size:30rpx;
  color:#484848;
}
.menu {
  float:left;
  width:100%;
  background:#fff;
  height:98rpx;
  font-size:30rpx;
  position:fixed;
  bottom:0;
  display:table;

}
.menu-p {
  display:table-cell;
  width:50%;
  vertical-align:middle;
  text-align:center;
  color:#4781c4;

}
.menu-common {
  font-size: 88rpx;
}
