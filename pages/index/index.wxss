/* pages/index/index.wxss */
/**index.wxss**/
.home-view{
  position: relative;
  z-index: 0;
  overflow-x: hidden;
  height: 100%;
  background: #4781c4;
}
.container {
  position: relative;
  width: 100%;
  height: 872rpx;
  text-align: center;
}
.container text {
  position: relative;
  display: block;
  font-family: PingFangSC;
  font-size: 52rpx;
  padding-top: 82rpx;
  color: #bafdff;
  z-index: 100;
}
.container .intro {
  position: relative;
  width: 240rpx;
  margin-top: 156rpx;
  margin-left: 415rpx;
}
.container .intro .slopingside{
  position: relative;
  height:0px;  
  border: 1.5rpx solid #86e6f3;  
  width: 75rpx;  
  transform:rotate(45deg) scaleY(0.5);  
  -o-transform:rotate(45deg) scaleY(0.5);  
  -moz-transform:rotate(45deg) scaleY(0.5);  
  -webkit-transform:rotate(45deg) scaleY(0.5);
  z-index: 100;
}  
.container .intro .linear {
  position: relative;
  height:0;   
  border: 1.5rpx solid #86e6f3;
  transform: scaleY(0.5);
   -o-transform: scaleY(0.5);  
  -moz-transform:scaleY(0.5);  
  -webkit-transform:scaleY(0.5);
  margin-left: 66rpx;
  margin-top: 24rpx;
  z-index: 100;
}
.container .intro .diamond {
  position: absolute;
  top: -96rpx;
  left: 70rpx;
  font-size: 24rpx;
  font-weight: 300;
  color: #83e6f4;
}
.container .intro .font {
  display: inline-block;
  padding: 0;
  font-size:24rpx;
  color:#83e6f4;
  width:24rpx;
}
.container image {
  position: absolute;
  top: 0;
  left: 0;
  width: 750rpx;
  height: 872rpx;
  z-index: 0;
}
.container .btn-contain {
  text-align: center;
  margin-top: 400rpx;
  font-weight: lighter;
  width: 100%;
  height: 120rpx;
}
.container .btn-contain .btn {
  display: inline-block;
  width: 330rpx;
  height: 86rpx;
  line-height: 86rpx;
  background-color: transparent;
  background-size: 100%;
  font-size: 32rpx;
  color: #bafdff;
  margin-left: 16rpx;
  margin-right: 16rpx;
}
.container .btn-contain .btn image {
  width: 100%;
  height: 100%;
}
.container .btn-contain .btn.sign {
  opacity: .5
}
.container .btn-contain .btn text {
  display: inline-block;
  padding-top: 0;
  font-size: 26rpx;
  color: #ff9c64;
}

.ranking {
  position: relative;
  color: #ffffff;
  background-color: #4781c4;
  font-size: 26rpx;
  text-align: center;
  z-index: 1;
  min-height: 240rpx;
}
.ranking .title {
  padding-top: 20rpx;
}
.ranking text {
  display: inline-block;
  padding: 0;
}
.ranking .left, .ranking .right {
  width: 20rpx;
  height: 1px;
  border-top: 1px solid #ffffff;
  margin: 0 10rpx;
  vertical-align: middle;
}
.ranking .user-list{
  width: 696rpx;
}
.ranking .user-list .user{
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  padding: 0 32rpx;
  text-align: left;
}
.ranking .user-list .user image {
  position: relative;
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  border: solid 1px #bafdff;
  top: 20rpx;
  margin-right: 20rpx;
}
.ranking .user-list .user text {
  display: inline-block;
  font-size: 26rpx;
  color: #bafdff;
}
.ranking .user-list .user .username {
  
}
.ranking .user-list .user .score{
  position: relative;
  float: right;
}

.padding {
  padding: 49rpx 0;
  z-index: 1;
}

.menu {
  position: fixed;
  background: #ffffff;
  bottom: 0;
  width: 100%;
  height: 98rpx;
  line-height: 98rpx;
  z-index: 99;
}
.menu view{
  display: inline-block;
  width: 375rpx;
  text-align: center;
  color: #4781c4;
}
.menu view .font {
  width: 88rpx;
  font-size: 88rpx;
}
